{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "cropgen:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"dockerRun": {
				"containerName": "cropgen",
				"image": "cropgen:latest",				
				"ports": [
				  {
					"containerPort": 27746,
					"hostPort": 27746
				  }
				]
			},
			"python": {
				"file": "main.py"
			}
		}
	]
}